  field(PINI, "YES")
  field(DESC, "Pulse Generator $(ID)")
  field(VAL , "$(Pul$(ID)-Delay-SP\=0)")
  field(EGU , "us")
  field(LINR, "LINEAR")
  field(ESLO, "1e6")
  field(PREC, "3")
  field(LOPR, "0")
  field(FLNK, "$(SYS)-$(EVR):Pul$(ID)-Delay-RB")
  info(autosaveFields_pass0, "VAL EGU ESLO PREC HOPR LOPR DRVL DRVH")
}

