file "evr-cml.template"
{pattern
{ SYS,      EVR,     ID, NBIT, MAX   }
{"$(SYS)", "$(EVR)", 0,  40,   81880 }
{"$(SYS)", "$(EVR)", 1,  40,   81880 }
{"$(SYS)", "$(EVR)", 2,  40,   81880 }
{"$(SYS)", "$(EVR)", 3,  40,   81880 }
}

