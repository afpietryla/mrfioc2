# Record set for a VME-EVRRF-230
#
# Macros:
#  EVR = Card name (same as mrmEvrSetupVME())
#  SYS = System name (ie SR-TM)
#

file "evr-base.template"
{pattern
{ SYS,      EVR,     EVNT1HZ}
{"$(SYS)", "$(EVR)", 125}
}


file "sfp.template"
{
{SYS="$(SYS)", EVR="$(EVR)", ID="0"}
}

file "dataBuffer.template"
{
{SYS="$(SYS)", EVR="$(EVR)"}
}

file "flash.template"
{
{SYS="$(SYS)", EVG="$(EVR)"}
}


file "evr-prescaler.template"
{pattern
{ SYS,      EVR,     ID, MAX}
{"$(SYS)", "$(EVR)", 0, "0xffffffff"}
{"$(SYS)", "$(EVR)", 1, "0xffffffff"}
{"$(SYS)", "$(EVR)", 2, "0xffffffff"}
{"$(SYS)", "$(EVR)", 3, "0xffffffff"}
{"$(SYS)", "$(EVR)", 4, "0xffffffff"}
{"$(SYS)", "$(EVR)", 5, "0xffffffff"}
{"$(SYS)", "$(EVR)", 6, "0xffffffff"}
{"$(SYS)", "$(EVR)", 7, "0xffffffff"}
}

# Pulse generators w/o a prescaler set NOPS=1
# TODO this form factor has pul0 - pul23
